{# src/AppBundle/Resources/views/Visit/identify.html.twig#}

{% extends "base.html.twig" %}

    {% block title %}
        {{ 'title.site.identify' | trans }} - {{ parent() }}
    {% endblock %}


    {% block body %}

        <div class="container mb-40">
            <div class="row">

                <div class="col-lg-12 section-progress">

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a class="breadcrumb-item"
                                                           href="{{ path('app_visit_order',{'event':visit.event.id}) }}">{{ 'breadcrumb.first.label' | trans }}</a>
                            </li>
                            <li class="breadcrumb-item text-purple font-weight-bold"
                                style="text-decoration:underline;">{{ 'breadcrumb.second.label' | trans }}
                            </li>
                            <li class="breadcrumb-item active">{{ 'breadcrumb.third.label' | trans }}</li>
                            <li class="breadcrumb-item active">{{ 'breadcrumb.fourth.label' | trans }}</li>
                            <li class="breadcrumb-item active">{{ 'breadcrumb.five.label' | trans }}</li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>

        <section>

            <div class="container">
                <div class="row">

                    <div class="col-lg-12">

                        {{ form_start(form, {'attr': {'class': 'was-validated row'}}) }}

                        {% for ticket in form.tickets %}
                            <div class="col-sm-6 col-md-6">
                            <div class="ticket  ">
                                <div class="ticket__content">
                                    <div class="num-billet size-subtitle ticket__text">{{ 'ticket' | trans }}
                                        nÂ°{{ loop.index }}</div>
                                    <br/>
                                    {{ form_row(ticket.lastname) }}

                                    {{ form_row(ticket.firstname) }}

                                    {{ form_row(ticket.country, { 'separator': '=====' }) }}<br/>

                                    {{ form_row(ticket.birthday) }}<br/>
                                </div>
                            </div>



                            </div>






                        {% endfor %}
                    </div>

                    <div class="row">

                        <div class="col-sm-12">
                            <button type="submit"
                                    class="btn btn-lg btn-purple upperCase">{{ 'button.validate' | trans }}</button>
                        </div>
                    </div>

                    {{ form_end(form) }}<br/>

                </div>
            </div>

            </div>
            </div>
        </section>

    {% endblock %}
